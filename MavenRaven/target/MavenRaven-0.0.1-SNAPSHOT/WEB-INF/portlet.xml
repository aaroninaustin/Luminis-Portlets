<?xml version="1.0" encoding="UTF-8"?>

<portlet-app
    xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"
    version="1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd
                        http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd">

    <portlet>
        <description>Write here a short description about your portlet.</description>
        <portlet-name>MavenRaven</portlet-name>
        <display-name>MavenRaven Portlet</display-name>

        <portlet-class>edu.stedwards.luminis.portlets.MavenRaven.MyPortlet</portlet-class>

        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>VIEW</portlet-mode>
            <portlet-mode>HELP</portlet-mode>
        </supports>

        <supported-locale>en,zh</supported-locale>
		
        <portlet-info>
            <title>Welcome! Maven Portlet Here.</title>
            <short-title>mavenRaven</short-title>
            <keywords>hello,maven,portlet,porklet</keywords>
        </portlet-info>
    </portlet>
</portlet-app>
